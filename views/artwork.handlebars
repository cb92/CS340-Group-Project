<h2>Add Artwork:</h2>
<form class="" action="/artwork" method="post" id="newArtwork">
    Title: <br>
    <input type="text" name="artwork_title"> <br>
    Artist: <br>
    <select name="artist_id">
      {{#each artists}}
        <option value={{this.id}}>{{this.name}}</option>
      {{/each}}
    </select> <br>
    Category: <br>
    <input type="text" name="artwork_category"> <br>
    Date (Year): <br>
    <input type="number" name="artwork_date"> <br>
    Thumbnail URL: <br>
    <input type="url" name="artwork_thumbnail"> <br>
   Partner: <br>
    <select id = "artwork_partner" name="artwork_partner">
      <option value="null">NONE</option>
      {{#each partners}}
        <option value={{this.id}}>{{this.name}}</option>
      {{/each}}
    </select> <br>

    Gene (Select at least one): <br>
    <select multiple required id = "artwork_genes" name="genes_to_link">
      {{#each genes}}
        <option value={{this.id}} >{{this.name}}</option>
      {{/each}}
    </select> <br>

    <input type="submit">
</form>

<h2>Artwork in Collection</h2>
<div class="card-columns">
  {{#each artwork}}
    <div class = "card" style = "width: 18rem;">
      <img class="card-img-top" src={{this.thumbnail_url}} alt="Mona Lisa">
      <div class = "card-body">
        <h5 class="card-title">{{this.title}}</h5><br>
        <em>Artist:</em> {{this.artist_name}}<br>
        <em>Category:</em> {{this.category}}<br>
        <em>Date:</em> {{this.date}}<br>
        <em>Genes:</em>{{this.gene_names_comb}}<br>
        <em>Partner:</em> {{this.partner_name}}<br>
        <button class = "btn-primary" data-toggle="modal" data-target={{this.modal_id_target}}>Move Artwork</button>
      </div>
    </div>

  <div class="modal fade" id={{this.modal_id}} tabindex="-1" role="dialog" aria-labelledby="partnerModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="partnerModalTitle">Select New Partner for {{this.title}} by {{this.artist_name}}</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form class="" action="/artwork" method="put" id="newArtwork">
            <input type="text" name="Search for Partner">
            <ul>
              {{#each partners}}
                <li value={{this.id}}>{{this.name}}</li>
              {{/each}}
            </ul>
            Note: when this website is connected to a backend, this will implement search/filter functionality
            <button type="button" class="btn btn-primary">Save</button>
          </form> 
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        </div>
      </div>
    </div>
  </div>

  {{/each}}
</div>



  

