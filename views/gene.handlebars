<h2>Add Gene:</h2>
<p>All neccessary fields are marked with an asterisk.</p>
<form id="newGene" action="/gene" method="post" >
    *Name: <br>
    <input required type="text" name="name"> <br>
    Description: <br>
    <textarea rows="4" cols="50" name="description" form="newGene"></textarea> <br>
     Artworks in this Gene (Select at least one): <br>
    <select multiple required name="artworks_to_link">
      {{#each artworks}}
      <option value={{id}}>{{title}}</option>
      {{/each}}
    </select> <br>
    <input type="submit">
</form*>

<h2>Genes:</h2>

<table>
  <thead>
    <th>Gene Name</th>
    <th>Description</th>
  </thead>
  <tbody>
    {{#each genes}}
    <tr>
      <td>{{name}}</td>
      <td>{{description}}</td>
    </tr>
    {{/each}}
  </tbody>

</table>
